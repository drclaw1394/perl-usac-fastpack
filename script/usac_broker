#!/usr/bin/env/ usac --backend AnyEvent
#

use v5.36;
use Data::Dumper;
use uSAC::IO;
use uSAC::FastPack::Broker;
use Data::Dumper;

my $node=uSAC::FastPack::Broker->new;

my %config;

my $l="po=6123,t=stream,f=INET\$,i=lo";



# Create 
sub do_connect;

$node->server($l);

$node->on_ready=sub {
  asay "Server running";
};

$node->on_bridge=sub {
 asay "GOT a new bridge:";
  timer 0, 1, sub {
    $node->broadcast(undef, "test", "value");
  };
};






1;
