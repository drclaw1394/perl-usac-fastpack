#!/usr/bin/env usac --backend AnyEvent
#

use v5.36;
use Data::Dumper;
use uSAC::IO;
use uSAC::FastPack::Broker;
#use uSAC::FastPack::Broker::Bridge;

my $node=uSAC::FastPack::Broker->new;

my %config;


use feature "try";

asay $STDERR, "DO CONNECT";
my $c="po=6123,t=stream,f=INET\$,i=lo";
my $bridge;
my $t;
$node->on_bridge=sub {
    asay $STDERR, "GOT A BRIDGE";
    $bridge=$_[0];
    $bridge->on_error=sub {
      asay $STDERR, "ERROR";
      timer_cancel($t);
      try {
        $bridge->close;
      }
      catch($e){
        asay $STDERR, "bridge close error: $e";
      }
    
    };
    asay $STDERR, "CONNECTED OK";
    $node->listen("test", $_[0]);
};


$node->connect($c);

$node->listen(undef, "test", sub {
      asay $STDERR, "GOT MESSAGE ".Dumper @_;
      $STDERR->flush();
});


$t=uSAC::IO::timer 0, 1, sub {
  asay $STDERR, "timer";
  $node->broadcast(undef, "test", "value"x10);
  $STDERR->flush();
};



1;
